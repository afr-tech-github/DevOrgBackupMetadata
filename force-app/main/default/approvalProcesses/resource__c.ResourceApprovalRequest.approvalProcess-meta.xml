<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Accounting_Manager</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Accounting_Staff</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Top_Executive</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>clofor_com_cfs__Active__c</field>
        <field>clofor_com_cfs__Category__c</field>
        <field>clofor_com_cfs__SubCategory__c</field>
        <field>clofor_com_cfs__StartDate__c</field>
        <field>clofor_com_cfs__EndDate__c</field>
        <field>clofor_com_cfs__ServiceProviderVendor__c</field>
        <field>clofor_com_cfs__ResourceName__c</field>
        <field>clofor_com_cfs__Unit__c</field>
        <field>clofor_com_cfs__UnitPriceLocal__c</field>
        <field>clofor_com_cfs__UnitPrice__c</field>
        <field>clofor_com_cfs__Tax__c</field>
        <field>clofor_com_cfs__AccountingCode__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>ResourceApprovalRequestEmailTemplate</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>RESOURCE APPROVAL REQUEST 1STEP</label>
        <name>ResourceApprovalRequest1Step</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>ResourceApprovalRequestEmailTemplate2step</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>RESOURCE APPROVAL REQUEST 2STEP</label>
        <name>ResourceApprovalRequest2Step</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Approval/ResourceApprovalRequest</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>clofor_com_cfs__resource__c.clofor_com_cfs__Active__c</field>
            <operation>notEqual</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ActiveCheckBox</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>RESOURCE APPROVAL REQUEST</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
